{
    "name": "vscode-make",
    "displayName": "Make",
    "description": "Run Make easily",
    "version": "1.0.2",
    "publisher": "technosophos",
    "license": "MIT",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "make",
        "makefile"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/technosophos/vscode-make.git"
    },
    "activationEvents": [
        "onCommand:extension.runMake",
        "onCommand:extension.runMakeByTarget"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.runMake",
                "category": "Make",
                "title": "Make"
            },
            {
                "command": "extension.runMakeByTarget",
                "category": "Make",
                "title": "Make (Target select)"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.runMake",
                    "when": "resourceLangId == makefile",
                    "group": "Make"
                },
                {
                    "command": "extension.runMakeByTarget",
                    "when": "resourceLangId == makefile",
                    "group": "Make"
                }
            ],
            "editor/context": [
                {
                    "command": "extension.runMake",
                    "when": "resourceLangId == makefile",
                    "group": "Make"
                },
                {
                    "command": "extension.runMakeByTarget",
                    "when": "resourceLangId == makefile",
                    "group": "Make"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1"
    },
    "dependencies": {
        "vscode": "^1.1.36"
    }
}